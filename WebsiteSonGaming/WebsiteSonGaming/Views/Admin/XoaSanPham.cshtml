@model WebsiteSonGaming.Models.SANPHAM

@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Bạn có chắc muốn xóa sản phẩm này không?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.tensanpham)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tensanpham)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.giaban)
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.giaban) VNĐ
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ngaycapnhat)
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.ngaycapnhat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hinhsanpham)
        </dt>

        <dd>
            <img src="@Url.Content("~/Images/HinhSanPham/"+  Model.hinhsanpham)" style="width:100px;height:100px;overflow:hidden;" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.thongtin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thongtin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LOAISANPHAM.tenloai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LOAISANPHAM.tenloai)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NHASANXUAT.tennsx)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHASANXUAT.tennsx)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-dark" /> |
        </div>
    }
    <a href="@Url.Action("QuanLySanPham","Admin")">
        <input type="submit" class="btn btn-dark" value="Thoát" />
    </a>
</div>
