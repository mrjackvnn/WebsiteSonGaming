@model WebsiteSonGaming.Models.SANPHAM

@{
    ViewBag.Title = "SuaSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Trang Sửa Sản Phẩm</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.masanpham)

        <div class="form-group row">
            @Html.LabelFor(model => model.tensanpham, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tensanpham, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tensanpham)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.mansx, "Nhà Sản Xuất", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaNsx", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mansx)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.maloai, "Loại Sản Phẩm", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoai", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maloai)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.giaban, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.giaban, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.giaban)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ngaycapnhat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="Ngaycapnhat" class="form-control" />
                @Html.ValidationMessageFor(model => model.ngaycapnhat)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.hinhsanpham, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileUpload" class="form-control" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.thongtin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="txtthongtin">Mô tả thông tin sản phẩm </textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-dark" />
            </div>
        </div>
    </div>
}
<a href="@Url.Action("QuanLySanPham","Admin")">
    <input type="submit" class="btn btn-dark" value="Thoát" />
</a>
