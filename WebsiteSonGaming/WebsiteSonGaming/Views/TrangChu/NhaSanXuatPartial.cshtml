@model List<WebsiteSonGaming.Models.NHASANXUAT>


<style>
    #MenuHide2 {width:100%;}
    #MenuHide2 a{background-color:#808080;}
    #MenuHide2 a:hover{color:blue;}

    #MenuDropDown button{width:100%;height:35px;}
</style>
<div class="dropdown" id="MenuDropDown">
    <button type="button" class="dropdown-toggle btn-primary" data-toggle="collapse" data-target="#MenuHide2" aria-expanded="false" data-parent="#accordion" aria-controls="MenuHide2">
        Nhà Sản Xuất
    </button>
    <div class="collapse" id="MenuHide2">
        @foreach (var item in Model)
        {
            <a class="dropdown-item" href="@Url.Action("LoaiSanPham","TrangChu",new { id = item.mansx})">@item.tennsx</a>
        }
    </div>
</div>


