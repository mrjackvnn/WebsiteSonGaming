@model List<WebsiteSonGaming.Models.LOAISANPHAM>

<style>
    #MenuHide1 {width:100%;}
    #MenuHide1 a{background-color:#808080;}
    #MenuHide1 a:hover{color:blue;}

    #MenuDropDown button{width:100%;height:35px;}
</style>
<div class="dropdown" id="MenuDropDown">
    <button type="button" class="dropdown-toggle btn-primary" data-toggle="collapse" data-target="#MenuHide1" aria-expanded="true" data-parent="#accordion" aria-controls="MenuHide1">
            Loại Sản Phẩm
    </button>
    <div class="collapse" id="MenuHide1">
        @foreach (var item in Model)
        {
            <a class="dropdown-item" href="@Url.Action("LoaiSanPham","TrangChu",new { id = item.maloai})">@item.tenloai</a>
        }
    </div>
</div>

