@model IEnumerable<WebsiteSonGaming.Models.GioHang>

@{
    ViewBag.Title = "MuaHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<h2 style="text-align:center">THÔNG TIN HÓA ĐƠN</h2>
<table align="center" border="1" class="table">f
    <tr style="text-align:center; font-weight:bold">
        <td> Tên Sản Phẩm </td>
        <td> Hình Sản Phẩm </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.strtensanpham</td>
            <td><img style="height:100px;width:100px;overflow:hidden;" src="~/Assets/Images/HinhSanPham/@item.strhinhsanpham"></td>
            @using (Html.BeginForm("CapNhatGioHang", "Giohang", new { @imasanpham = item.imasanpham }))
            {
                <td>
                    @item.isoluong
                </td>
                <td>@String.Format("{0:0,0}", item.dgiaban) </td>
                <td>@String.Format("{0:0,0}", item.dthanhtien) </td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="3"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
        <td colspan="3"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="6">
            <a href="@Url.Action("GioHang","GioHang")">
                <input type="submit" class="btn btn-dark" value="Trờ Về Giỏ Hàng" />
            </a>
        </td>
    </tr>
</table>

    @using (Html.BeginForm())
    {
        <input type="submit" value="Đồng Ý Mua Hàng" class="btn btn-dark"/>
    }