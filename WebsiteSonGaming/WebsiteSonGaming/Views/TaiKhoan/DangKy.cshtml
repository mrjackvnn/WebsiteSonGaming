@model WebsiteSonGaming.Models.KHACHHANG

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    #FormDangNhap a {
        color: black;
    }
</style>
@using (Html.BeginForm("DangKy","TaiKhoan",FormMethod.Post))
