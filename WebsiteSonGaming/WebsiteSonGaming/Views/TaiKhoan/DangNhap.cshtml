@model WebsiteSonGaming.Models.KHACHHANG
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using (Html.BeginForm())
{
    <form>
        <h4>Trang Đăng Nhập</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @ViewBag.ThongBao
        <div class="form-group row">
            <div class="col-md-2">
                Tên Đăng Nhập
            </div>
            <div class="col-md-5">
                @Html.TextBox("txtTenDangNhap")
            </div>
            <div class="col-md-5">
                @Html.ValidationMessageFor(model => model.taikhoan, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                Mật Khẩu
            </div>
            <div class="col-md-5">
                @Html.TextBox("txtMatKhau")
            </div>
            <div class="col-md-5">
                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Đăng Nhập" class="btn btn-default" />
        </div>
    </form>
}
