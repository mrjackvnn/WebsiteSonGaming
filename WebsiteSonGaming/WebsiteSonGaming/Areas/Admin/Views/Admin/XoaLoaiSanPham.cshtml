@model WebsiteSonGaming.Models.LOAISANPHAM

@{
    ViewBag.Title = "XoaNhaSanXuat";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <dl class="row">
        <dt class="col-2">
            Tên loại sản phẩm
        </dt>

        <dd class="col-5">
            @Html.DisplayFor(model => model.tenloai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color offset-1">
            <input type="submit" value="Xóa" class="btn btn-dark" />
        </div>
    }
</div>
@Html.ActionLink("Thoát", "QuanLyLoaiSanPham")